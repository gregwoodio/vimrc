" turn off compatibility with vi
set nocp

" enable plugins
filetype plugin on

" syntax highlighting
syntax on

" Recursively search path from directory you opened vim in
set path+=**

" autocomplete vim commands
set wildmenu

" turn on line numbers
set nu

" incremental search
set is

" search highlighting
set hlsearch

" tabs to spaces
set tabstop=4 expandtab

" open netrw tabs to the right
let g:netrw_altv=1
